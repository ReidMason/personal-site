---
import SocialLinks from "../components/SocialLinks.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Reid Mason">
  <main class="flex h-full w-full flex-col items-center justify-center">
    <div class="name-container mb-32 flex flex-col items-center gap-2">
      <h1 class="text-4xl font-semibold text-gray-50">Reid Mason</h1>
      <SocialLinks />
    </div>
  </main>
</Layout>

<style>
  .name-container {
    animation: grow 300ms forwards cubic-bezier(0.57, 0.21, 0.69, 1.25);
  }

  @keyframes slide-in {
    from {
      opacity: 0;
      transform: translateY(-100%);
    }
    to {
      opacity: 1;
      transform: translateY(0px);
    }
  }
</style>
