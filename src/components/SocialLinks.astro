---
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import SocialLink from "../components/SocialLink.astro";
import BlogIcon from "./icons/BlogIcon.astro";
import { ROUTES } from "../consts";
---

<div class="social-links flex origin-top gap-4">
  <SocialLink
    text="GitHub"
    href="https://github.com/ReidMason"
    Icon={GitHubIcon}
  />
  <SocialLink
    text="LinkedIn"
    href="https://www.linkedin.com/in/reid-mason-566800139/"
    Icon={LinkedInIcon}
  />
  <SocialLink text="Blog" href={ROUTES.blog} Icon={BlogIcon} />
</div>

<style>
  .social-links {
    animation: slide-in 500ms forwards cubic-bezier(0.57, 0.21, 0.69, 1.25);
    animation-delay: 250ms;
    @apply opacity-0;
  }

  @keyframes grow {
    from {
      transform: scale(0%);
      opacity: 0;
    }
    to {
      transform: scale(100%);
      opacity: 1;
    }
  }
</style>
