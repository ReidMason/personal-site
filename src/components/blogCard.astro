---
import type { CollectionEntry } from "astro:content";
import { createBlogUrl } from "../utils";

export interface Props {
  blog: CollectionEntry<"blog">;
}

const { blog } = Astro.props;
---

<div
  class="flex flex-col gap-4 rounded-xl border border-slate-500 p-4 text-gray-50"
>
  <a
    class="cursor-pointer text-xl font-semibold transition-colors hover:text-blue-500 hover:underline"
    href={createBlogUrl(blog.slug)}>{blog.data.title}</a
  >
  <p>{blog.data.description}</p>
  <a class="text-blue-500 underline" href={createBlogUrl(blog.slug)}
    ><small>Read more...</small>
  </a>
</div>
