---
const { href, label } = Astro.props;

const isActive = href === Astro.url.pathname;

const activeClass =
  "border-indigo-600 dark:border-indigo-500 text-gray-900 dark:text-white";
const defaultClass =
  "border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 dark:hover:border-white/20 hover:text-gray-700 dark:hover:text-gray-200";
---

<a
  href={href}
  class={`inline-flex items-center border-b-2 ${isActive ? activeClass : defaultClass}`}
  aria-current={isActive ? "page" : undefined}>{label}</a
>
